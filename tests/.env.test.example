# Test Environment Configuration
# Copy this to .env.test and fill in actual values

# Test Database Configuration (Use separate test instance)
SUPABASE_URL=https://your-test-project.supabase.co
SUPABASE_ANON_KEY=your-test-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-test-service-role-key

# OpenRouter API (Real API for integration tests)
OPENROUTER_API_KEY=your-openrouter-api-key

# Test Backend Configuration
TEST_BACKEND_URL=http://localhost:3001
TEST_FRONTEND_URL=http://localhost:3000

# MCP Server Configuration for Testing
MCP_SERVER_PATH=../mcp-server/dist/index.js
MCP_TIMEOUT=30000

# Test-specific settings
TEST_DATABASE_CLEANUP=true
TEST_API_RATE_LIMIT=false
TEST_VERBOSE_LOGGING=true

# Performance Test Settings
PERFORMANCE_TEST_CONCURRENT_USERS=10
PERFORMANCE_TEST_DURATION_SECONDS=60
PERFORMANCE_TEST_RAMP_UP_SECONDS=10

# Test Data Configuration
TEST_BILL_SAMPLE_SIZE=100
TEST_SEARCH_QUERIES_COUNT=20
TEST_CITATION_VALIDATION=true

# CI/CD Settings
CI=false
TEST_TIMEOUT_MULTIPLIER=1.0